{
  "name": "prayershare",
  "version": "1.0.0",
  "description": "",
  "main": "server/src/server.js",
  "scripts": {
    "build": "babel server/src -d server/lib && cd client && npm run-script build",
    "build:server": "babel server/src -d server/lib",
    "build:client": "cd client && npm run-script build",
    "build:watch": "babel server/src -d server/lib -w",
    "client": "node start-client.js",
    "dev": "pm2 start server/lib/server.js --watch",
    "develop": "npm run build:watch",
    "start": "node server/lib/server.js",
    "production": "pm2 start --env production"
  },
  "author": "Josiah Nunemaker",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.10.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-plugin-flowtype": "^2.50.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.11.1",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.2"
  },
  "dependencies": {
    "altair-express-middleware": "^1.0.6",
    "apollo-errors": "^1.9.0",
    "apollo-server-express": "^1.4.0",
    "bcrypt": "^2.0.1",
    "body-parser": "^1.18.3",
    "casual": "^1.5.19",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "google-auth-library": "^1.6.1",
    "graphql": "^0.13.2",
    "graphql-tools": "^3.1.1",
    "jsonwebtoken": "^8.3.0",
    "knex": "^0.14.6",
    "lodash.merge": "^4.6.2",
    "mysql": "^2.16.0",
    "mysql2": "^1.6.1",
    "nodemailer": "^4.6.8",
    "npm": "^6.4.1",
    "pm2": "^3.1.2"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "babel-plugin-syntax-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "prettier",
      "react-app"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "class-methods-use-this": 0,
      "import/no-named-as-default": 0,
      "import/no-named-as-default-member": 0,
      "no-labels": 0,
      "no-console": 0,
      "react/jsx-filename-extension": 0,
      "prettier/prettier": [
        "error"
      ],
      "jsx-a11y/href-no-hash": [
        0
      ],
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "components": [
            "Link"
          ],
          "specialLink": [
            "to"
          ]
        }
      ]
    }
  }
}
